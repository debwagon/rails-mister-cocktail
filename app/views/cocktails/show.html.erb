<%= link_to "<< Home", cocktails_path %>
<br>
</br>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <%= img src="https://source.unsplash.com/featured/?cocktail" %>
<% end %>
<h2><%= @cocktail.name %></h2>
<br>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>:
  <%= dose.description%>
  <%= link_to "delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "confirm delete" } %>
  </li>
<% end %>

</ul>
<br>
<%= link_to "Add New Dose >>", new_cocktail_dose_path(@cocktail)  %>
<br>
