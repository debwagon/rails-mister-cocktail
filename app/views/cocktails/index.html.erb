<h1>Mixology Magic</h1>
<br>
<div class="cards">
  <% @cocktails.each_with_index do |cocktail, i| %>
    <div class="container">
      <div class="row">
        <img src=<%="https://source.unsplash.com/featured/?cocktail?sig+123#{i}"%>>
      </div>
      <div class="row">
        <div class="col">
          <strong><%= cocktail.name %></strong>
        </div>
        <div class="col">
          <%= link_to "recipe >>", cocktail_path(cocktail)  %>
        </div>
      </div>
    </div>
  <% end %>
</div>
